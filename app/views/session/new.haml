- if flash[:error].present?
    %ul.dotless-list
        %li{:class => "alert alert-danger", :role => "alert"}= flash[:error]

= form_tag "/login", :class => "col-md-3 center-block" do
    %div.form-group
        = label_tag "Email"
        = text_field_tag :email, nil, :autofocus => true, :required => true, :class => "form-control"
    %div.form-group
        = label_tag "Password"
        = password_field_tag :password, nil, :requried => true, :class => "form-control"
    = submit_tag "Login", :class => "btn btn-primary"