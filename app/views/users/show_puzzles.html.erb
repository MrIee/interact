<h1>Your Puzzles</h1>

<ul class="dotless-list">
    <% @puzzle.each do |p| %>
        <li>
            <ul>
                <li class="list-title"><%= p.title %></li>
                <li><%= cl_image_tag(p.path, :width => 200, :crop => :fill) %></li>
                <li>
                    <select name="grid_size" class="form-control grid-size" id="grid-size-<%= p.title %>">
                        <option value="3">3 x 3</option>
                        <option value="5">5 x 5</option>
                        <option value="7">7 x 7</option>
                        <option value="9">9 x 9</option>
                    </select>
                    <%= link_to("Play!", "#{puzzles_path}/#{p.title}/3", :class => "btn btn-primary my-puzzle-play", :id => "#{p.title}", "data-path" => "#{puzzles_path}/#{p.title}", "data-size" => "3"  ) %>
                </li>
                 <li><%= link_to "Delete Puzzle", "/puzzles/#{p.id}", :method => :delete, :data => { :confirm => "Are you sure?"} %></li>
            </ul>
        </li>
    <% end %>
</ul>