* {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

body, html {
    min-height: 100%;
}

body {
    height: 100%;
    margin: 0;
    padding: 0;
    background-image: url(<%= image_path("jigsaw_puzzle.svg") %>);
    background-size: cover;
}

h1, h2 {
    text-align: center;
    margin-bottom: 1em;
}

.center-block {
    float: none;
    margin: 0 auto;
}

.dotless-list ul {
    list-style: none;
    margin-bottom: 1em;
}

.dotless-list li {
    list-style: none;
}

.list-title {
    font-size: 2em;
}

#container {
    
}

.brand-link {
    color: #000;
    font-size: 1.5em;
}

.brand-link:hover {
    color: #000;
    text-decoration: none;
}

.brand-link img {
    margin-right: 0.5em;
}

#canvas {
    position: absolute;
}

#canvas-pieces {
    background-color: rgb(240, 240, 240);
    position: absolute;
    z-index: 1;
}

#canvas-puzzle {
    background-color: rgb(200, 225, 255);
    position: absolute;
    right: 0;
}

.puzzle-piece {
    position: absolute;
    border: 3px solid black;
}

.dropzone-correct-bg {
    background-color: green;
}

.dropzone-hover-bg {
    background-color: darkblue;
}

#timer {
    width: 150px;
    font-size: 4em;
    text-align: center;
    margin: auto;
}

#select-puzzle-form {
    display: block;
    margin: auto;
}

#puzzles {
    height: 150px;
    border: 3px solid black;
    overflow: scroll;
    background-color: #FFF;
}

#puzzles img {
    display: inline;
}

.puzzle-label {
    height: 40px;
    width: 100%;
    margin: 0;
    line-height: 40px;
    vertical-align: middle;
    border-bottom: 1px solid #333;
}

#puzzles input[type=radio] {
    display: none;
}

#puzzles input[type=radio]:checked + .puzzle-label {
    background-color: rgb(200, 225, 255);
}

.grid-size {
    display: inline;
    width: 75px;
}

#puzzle-play {
    float: right;
}