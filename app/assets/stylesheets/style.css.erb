@import url(https://fonts.googleapis.com/css?family=Syncopate:400,700);

* {
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
}

body, html {
    min-height: 100%;
}

body {
    height: 100%;
    font-family: "verdana";
    margin: 0;
    padding: 0;
    background-image: url(<%= image_path("jigsaw_puzzle.svg") %>);
    background-size: cover;
}

h1, h2 {
    font-family: 'Syncopate', sans-serif;
    font-weight: bold;
    text-align: center;
    color: white;

    text-shadow:
        -1px -1px 0 #000,
        1px -1px 0 #000,
        -1px 1px 0 #000,
        1px 1px 0 #000;

    margin-bottom: 1em;
}

table {
    background-color: white;
}

.alert-danger {
    display: none;
}

.center-block {
    float: none;
    margin: 0 auto;
}

.center-text {
    text-align: center;
}

.center-image {
    display: block;
    margin: auto;
}

.col-no-pad {
    padding: 0;
}

.dotless-list, .user-puzzles-list {
    list-style: none;
}

.dotless-list li, .user-puzzles-list li {
    text-align: center;
    list-style: none;
    margin-bottom: 0.75em;
}

.user-puzzles-list {
    margin: 0;
    padding: 0;
    margin-bottom: 2em;
}

.list-title {
    font-weight: bold;
}

.profile-picture {
    position: relative;
    display: block;
    border: 6px solid white;
    box-shadow: 0 0 0 3px hsl(0, 0%, 0%);
    border-radius: 15px;
    margin-bottom: 5px;
}

#container {
    
}

.brand-link {
    font-family: 'Syncopate', sans-serif;
    font-size: 1em;
    color: #000;
}

.brand-link:hover {
    color: #000;
    text-decoration: none;
}

.brand-link img {
    margin-right: 0.5em;
}

#canvas {
    position: absolute;
}

#canvas-pieces {
    background-color: rgb(240, 240, 240);
    position: absolute;
    z-index: 1;
}

#canvas-puzzle {
    background-color: rgb(200, 225, 255);
    position: absolute;
    right: 0;
}

.puzzle-piece {
    position: absolute;
    border: 3px solid black;
}

.dropzone-correct-bg {
    background-color: green;
}

.dropzone-hover-bg {
    background-color: darkblue;
}

#timer {
    width: 150px;
    font-size: 4em;
    text-align: center;
    margin: auto;
}

#select-puzzle-form {
    display: block;
    margin: auto;
}

#puzzles {
    height: 250px;
    border: 3px solid black;
    overflow: scroll;
    background-color: #FFF;
}

.puzzle-label {
    height: 40px;
    width: 100%;
    margin: 0;
    line-height: 40px;
    vertical-align: middle;
    border-bottom: 1px solid #333;
}

.puzzle-img {
    max-height: 40px;
    max-width: 80px;
    float: left;
}

.puzzle-title {
    float: right;
}

.puzzle-author {
    float: right;
}

.puzzle-author-picture {
    max-height: 40px;
}

#puzzles input[type=radio] {
    display: none;
}

#puzzles input[type=radio]:checked + .puzzle-label {
    background-color: rgb(200, 225, 255);
}

.grid-size {
    display: inline;
    width: 75px;
}

#puzzle-play {
    float: right;
}

#puzzle-score {
    float: right;
}

.table-bordered th {
    background-color: rgb(200, 225, 255);
}